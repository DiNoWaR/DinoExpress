<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
        <typeAlias alias="wagonType" type="ru.vasilyev.domain.WagonType"/>
    </typeAliases>

    <environments default="mySqlDevelopment">
        <environment id="mySqlDevelopment">
            <transactionManager type="MANAGED">
                <property name="closeConnection" value="false"/>
            </transactionManager>

            <dataSource type="JNDI">
                <property name="data_source" value="java:/DiNoExpress"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mappers/wagonTypeMapper.xml"/>
    </mappers>


</configuration>