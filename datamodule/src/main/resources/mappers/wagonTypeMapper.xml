<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ru.vasilyev.mappers.WagonTypeMapper">

    <insert id="insertEntity" parameterType="wagonType">
        INSERT INTO WagonType (ClassCode, Description, ClassCoefficient)
        VALUES (#{classCode}, #{description}, #{classCoefficient});
    </insert>

    <select id="getAllEntities" resultMap="wagonTypesMap">
        SELECT
            WT.Id,
            WT.ClassCode,
            WT.Description,
            WT.WagonTypeCoefficient
        FROM dinoexpress.WagonType WT;
    </select>

    <resultMap type="wagonType" id="wagonTypesMap">
        <id column="id" property="id"/>
        <result column="ClassCode" property="classCode"/>
        <result column="Description" property="description"/>
        <result column="ClassCoefficient" property="classCoefficient"/>
    </resultMap>

</mapper>