<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>testServlet</servlet-name>
        <servlet-class>ru.vasilyev.servlet.TestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>insertServlet</servlet-name>
        <servlet-class>ru.vasilyev.servlet.TestInsertServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>inputServlet</servlet-name>
        <servlet-class>ru.vasilyev.servlet.InputServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ajaxServlet</servlet-name>
        <servlet-class>ru.vasilyev.servlet.AjaxServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>testServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>insertServlet</servlet-name>
        <url-pattern>/insertwagons</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>inputServlet</servlet-name>
        <url-pattern>/input</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ajaxServlet</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>

</web-app>